version: '3.8'

services:
  app:
    build: .
    container_name: sebmarket_django
    restart: always
    volumes:
      - .:/app
      - static-data:/app/staticfiles
      - media-data:/app/media
      - logs-data:/app/logs
    environment:
      - PYTHONUNBUFFERED=1
      - DJANGO_SETTINGS_MODULE=config.settings
    env_file:
      - .env
    networks:
      - app-network
    expose:
      - "8000"

  nginx:
    image: nginx:alpine
    container_name: sebmarket_nginx
    restart: always
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./nginx/conf.d:/etc/nginx/conf.d:ro
      - static-data:/app/staticfiles
      - media-data:/app/media
      - certbot-etc:/etc/letsencrypt
      - certbot-var:/var/lib/letsencrypt
      - certbot-www:/var/www/certbot
    depends_on:
      - app
    networks:
      - app-network

  certbot:
    image: certbot/certbot
    container_name: sebmarket_certbot
    volumes:
      - certbot-etc:/etc/letsencrypt
      - certbot-var:/var/lib/letsencrypt
      - certbot-www:/var/www/certbot
    entrypoint: >
      /bin/sh -c "trap exit TERM;
      while :; do
        certbot renew --webroot -w /var/www/certbot --quiet;
        sleep 12h & wait $${!};
      done;"
    depends_on:
      - nginx
    networks:
      - app-network

networks:
  app-network:
    driver: bridge

volumes:
  static-data:
  media-data:
  logs-data:
  certbot-etc:
  certbot-var:
  certbot-www:
